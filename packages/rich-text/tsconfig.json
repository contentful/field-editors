{
  "extends": "../../tsconfig.json",
  "include": ["src", "types"],
  "compilerOptions": {
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "baseUrl": "./src",
    "noImplicitAny": false,
    "allowJs": true,
    "jsx": "react",
    "downlevelIteration": true,
    "resolveJsonModule": true
  },
  "linterOptions": {
    "exclude": ["src/**"]
  }
}
