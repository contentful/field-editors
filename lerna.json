{
  "npmClient": "yarn",
  "version": "independent",
  "useWorkspaces": true,
  "workspaces": ["packages/**", "apps/**"],
  "command": {
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "message": "chore(release): updated release notes and package versions [ci skip]",
      "ignoreChanges": [
        "*.md",
        "*.mdx",
        "**/*.spec.*",
        "**/*.stories.*",
        "**/__fixtures__/**",
        "**/__tests__/**"
      ]
    }
  }
}
