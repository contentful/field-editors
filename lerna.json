{
  "npmClient": "yarn",
  "version": "independent",
  "useWorkspaces": true,
  "workspaces": ["packages/**", "extensions/**"],
  "command": {
    "version": {
      "allowBranch": ["master", "next"],
      "conventionalCommits": true,
      "message": "chore(release): updated release notes and package versions [ci skip]",
      "ignoreChanges": [
        "*.md",
        "*.mdx",
        "**/*.spec.*",
        "**/*.stories.*",
        "**/__fixtures__/**",
        "**/__tests__/**"
      ]
    }
  }
}
