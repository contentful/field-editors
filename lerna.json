{
  "npmClient": "yarn",
  "version": "independent",
  "workspaces": ["packages/**", "apps/**"],
  "command": {
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "message": "chore(release): updated release notes and package versions [ci skip]",
      "ignoreChanges": [
        "*.md",
        "*.mdx",
        "**/*.spec.*",
        "**/*.stories.*",
        "**/__fixtures__/**",
        "**/__tests__/**"
      ]
    }
  },
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
